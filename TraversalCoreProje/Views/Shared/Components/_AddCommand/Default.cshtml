<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
    <p class="mb-4">
        İşaretli Alanaları Doldurmanız Gerekmektedir *
    </p>
    <form  method="post">

        <div class="form-group">
            <textarea name="CommantContent" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommandUser" class="form-control" placeholder="Adınız Soyadınız*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="DestinationID" class="form-control" placeholder="Destination Id*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum yap </button>
        </div>
    </form>
</div>